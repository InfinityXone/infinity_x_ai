# ============================================================
# INFINITY X AI - ENVIRONMENT TEMPLATE
# ============================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!
# ============================================================

# ============================================================
# AI PROVIDERS (at least one required)
# ============================================================
# GitHub Copilot Token - Get from GitHub Settings > Developer Settings > Personal Access Tokens
GITHUB_TOKEN=ghp_YOUR_GITHUB_TOKEN_HERE

# Groq API Key (Free tier) - Get from https://console.groq.com/keys
GROQ_API_KEY=gsk_YOUR_GROQ_KEY_HERE

# Anthropic Claude API Key - Get from https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-YOUR_ANTHROPIC_KEY_HERE

# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-YOUR_OPENAI_KEY_HERE

# ============================================================
# SERVER CONFIGURATION
# ============================================================
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173
JWT_SECRET=generate-a-secure-random-string-here

# ============================================================
# GITHUB APP INTEGRATION (Optional)
# ============================================================
GITHUB_APP_NAME=Your App Name
GITHUB_APP_ID=your-app-id
GITHUB_CLIENT_ID=your-client-id
GITHUB_CLIENT_SECRET=your-client-secret
GITHUB_APP_WEBHOOK_SECRET=your-webhook-secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/github/callback

# ============================================================
# GOOGLE WORKSPACE & CLOUD PLATFORM
# ============================================================
GOOGLE_WORKSPACE_EMAIL=your-email@domain.com
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./config/google-service-account.json

# ============================================================
# FIRESTORE & PUB/SUB (Google Cloud Native)
# ============================================================
FIRESTORE_DATABASE=(default)
PUBSUB_TOPIC_COMMANDS=infinity-commands
PUBSUB_TOPIC_AGENT_LOGS=infinity-agent-logs
PUBSUB_TOPIC_SYSTEM_STATUS=infinity-system-status
PUBSUB_TOPIC_CODE_PATCHES=infinity-code-patches
PUBSUB_TOPIC_WORKSPACE_EVENTS=infinity-workspace-events
PUBSUB_TOPIC_CLOUD_EVENTS=infinity-cloud-events

# ============================================================
# HOSTINGER INTEGRATION
# ============================================================
HOSTINGER_API_KEY=your-hostinger-api-key
HOSTINGER_WEBHOOK_SECRET=your-webhook-secret

# ============================================================
# AUTONOMOUS SYSTEM
# ============================================================
AUTO_ALL_ON_START=false
MASTER_INFINITY_ENABLED=true
INFINITY_AUTONOMOUS_LOOP=true
LOOP_CYCLE_INTERVAL=60000
LOOP_EVOLUTION_THRESHOLD=10
LOOP_AUTO_SYNC=true
LOOP_AUTO_PUSH=true
LOOP_MAX_ERRORS=5
LOOP_TARGET_LEVEL=0
